{
    "name": "brilliant-code/table",
    "description": "Easily create tables. Support multiple formats (CSV, HTML). Usable for data export with custom business logic",
    "keywords": [
        "brilliant-code",
        "table"
    ],
    "homepage": "https://github.com/brilliant-code/table",
    "license": "MIT",
    "authors": [
        {
            "name": "Ostap",
            "email": "ostap34php@gmail.com",
            "homepage": "https://github.com/osbre",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "league/csv": "^9.4",
        "spatie/html-element": "^1.1"
    },
    "require-dev": {
        "symfony/var-dumper": "^4.3",
        "phpunit/phpunit": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "brilliant-code\\Table\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrilliantCode\\Table\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
